<div class="max-w-6xl mx-auto px-4">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4 w-full">
    <div class="md:flex-1">
      <h1 class="text-3xl font-extrabold text-gray-900">Admin Panel Â· Manage Articles</h1>
      <p class="text-gray-600 max-w-xl mt-2 text-base">
        Manage, create, edit, and delete all articles shown to regular users.<br>
        Click <b>Create New Article</b> to add new content, or press <b>Show</b> to view details and make edits.
      </p>
    </div>
    <div>
      <%= link_to "Create New Article", new_admin_article_path, class: "px-6 py-3 bg-blue-700 hover:bg-blue-800 text-white rounded-lg font-bold shadow-lg text-lg transition" %>
    </div>
  </div>

  <%# -------- Draft Section -------- %>
  <div class="mb-8">
    <h2 class="text-xl font-bold mb-4 text-gray-700 flex items-center gap-2">
      <span class="inline-block w-3 h-3 bg-gray-400 rounded-full"></span>
      Draft
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-7">
      <% @draft_articles.each do |article| %>
        <%= render partial: "admin/articles/partials/card", locals: { article: article } %>
      <% end %>
      <% if @draft_articles.blank? %>
        <div class="text-gray-400 italic">No draft articles.</div>
      <% end %>
    </div>
  </div>

  <%# -------- Waiting for review Section -------- %>
  <div class="mb-8">
    <h2 class="text-xl font-bold mb-4 text-yellow-700 flex items-center gap-2">
      <span class="inline-block w-3 h-3 bg-yellow-400 rounded-full"></span>
      Waiting for Review
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-7">
      <% @waiting_articles.each do |article| %>
        <%= render partial: "admin/articles/partials/card", locals: { article: article } %>
      <% end %>
      <% if @waiting_articles.blank? %>
        <div class="text-gray-400 italic">No articles waiting for review.</div>
      <% end %>
    </div>
  </div>

  <%# -------- Published Section -------- %>
  <div class="mb-8">
    <h2 class="text-xl font-bold mb-4 text-green-700 flex items-center gap-2">
      <span class="inline-block w-3 h-3 bg-green-400 rounded-full"></span>
      Published
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-7">
      <% @published_articles.each do |article| %>
        <%= render partial: "admin/articles/partials/card", locals: { article: article } %>
      <% end %>
      <% if @published_articles.blank? %>
        <div class="text-gray-400 italic">No published articles.</div>
      <% end %>
    </div>
  </div>
</div>