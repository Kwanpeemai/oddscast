<% if article.status == "draft" %>
  <div class="bg-white border border-gray-200 rounded-xl shadow-lg p-6 flex flex-col relative">
    <span class="absolute top-3 right-3 px-2 py-1 text-xs rounded-full z-10
    <%= case article.status
          when "draft" then "bg-gray-200 text-gray-700"
          when "waiting_for_review" then "bg-yellow-100 text-yellow-700"
          when "published" then "bg-green-100 text-green-700"
        end
    %>">
      <%= article.status.humanize %>
    </span>
    <% if article.present? %>
      <% if article.cover_image.attached? %>
        <%= image_tag article.cover_image, alt: article.title, class: "w-full h-40 object-cover mb-4 rounded-md shadow" %>
      <% else %>
        <div class="w-full h-40 bg-gray-100 rounded-md mb-4 flex items-center justify-center text-gray-300 text-lg font-semibold">
          No Image Available
        </div>
      <% end %>
    <% end %>
    <h2 class="text-xl font-bold mb-1 truncate"><%= article.title %></h2>
    <div class="text-gray-500 text-sm mb-4 whitespace-pre-line line-clamp-3"><%= article.description.to_s.truncate(90) %></div>
    <div class="mt-auto flex justify-end">
      <%= link_to "Show", [:admin, article], class: "px-4 py-2 text-white font-semibold bg-gradient-to-r from-blue-400 to-purple-500 hover:from-blue-500 hover:to-purple-500 text-white rounded-full transition" %>
    </div>
  </div>
<% end %>
