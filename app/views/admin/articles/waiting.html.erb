<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-12">
  <div class="flex items-center justify-between mb-10">
    <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight">Article waiting for publish</h1>
    <%= link_to "Back to Articles List", admin_articles_path,
          class: "inline-flex items-center px-5 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-semibold shadow-md transition duration-200" %>
  </div>
  <div class="bg-white rounded-2xl shadow-lg p-10">
    <%= form_with(model: [:admin, @article], local: true, html: { enctype: "multipart/form-data" }) do |form| %>
      <% ready_only = @article.status == "waiting_for_review" || (defined?(@waiting_for_review) && @waiting_for_review) %>
      <% if @article.errors.any? %>
        <div class="mb-8 border-l-4 border-red-600 bg-red-50 p-5 rounded-lg text-red-900 shadow-sm">
          <h3 class="font-bold mb-3 text-lg">Form Errors:</h3>
          <ul class="list-disc pl-6 space-y-1 text-sm">
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="space-y-8 md:col-span-1">
          <div>
            <%= form.label :title, "Article Title", class: "block text-gray-900 font-semibold mb-3" %>
            <%= form.text_field :title, placeholder: "Enter article title",
                  class: "w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-400 focus:border-blue-500 transition disabled:bg-gray-100 disabled:text-gray-400",
                  disabled: ready_only %>
          </div>
          <div>
            <%= form.label :cover_image, "Cover Image", class: "block text-gray-900 font-semibold mb-3" %>
            <%= form.file_field :cover_image,
                  class: "block w-full text-gray-700 file:border-0 file:bg-blue-100 file:text-blue-700 file:px-5 file:py-2 file:rounded-lg file:font-semibold hover:file:bg-blue-200 transition disabled:cursor-not-allowed",
                  disabled: ready_only %>
          </div>
        </div>
        <div class="md:col-span-2">
          <%= form.label :description, "Content / Description", class: "block text-gray-900 font-semibold mb-3" %>
          <%= form.text_area :description, rows: 14, placeholder: "Write your article content here...",
                class: "w-full h-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-400 focus:border-blue-500 resize-y transition disabled:bg-gray-100 disabled:text-gray-400",
                disabled: ready_only %>
        </div>
      </div>
      <% if !ready_only %>
        <div class="flex justify-end mt-12">
          <%= form.submit @article.persisted? ? "Update Article" : "Create Article",
            class: "px-8 py-3 bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-400 text-white text-lg font-semibold rounded-2xl shadow-md transition",
            data: { confirm: "Are you sure you want to submit?" } %>
        </div>
      <% end %>
    <% end %>
    <% if @article.status == "waiting_for_review" %>
      <div class="mt-16 space-y-6 max-w-md mx-auto">
        <%= button_to "Approve", approve_admin_article_path(@article),
          method: :patch,
          class: "w-full py-4 bg-green-600 hover:bg-green-700 text-white rounded-2xl font-semibold shadow-md transition text-lg focus:ring-4 focus:ring-green-300 focus:outline-none",
          data: { confirm: "Approve this article?" } %>
        <%= button_to "Reject", reject_admin_article_path(@article),
          method: :patch,
          class: "w-full py-4 bg-yellow-500 hover:bg-yellow-600 text-white rounded-2xl font-semibold shadow-md transition text-lg focus:ring-4 focus:ring-yellow-300 focus:outline-none",
          data: { confirm: "Reject this article?" } %>
      </div>
    <% end %>
  </div>
</div>
