<header class="bg-white/70 backdrop-blur-sm shadow px-8 py-4 rounded-b-3xl">
  <div class="max-w-7xl mx-auto flex flex-col gap-4">
    <!-- Top bar -->
    <div class="flex items-center justify-between flex-wrap gap-4 border-b pb-3">
      <!-- Logo & Contact Info -->
      <div class="flex items-center gap-6 flex-wrap">
        <%= link_to root_path do %>
          <img src="<%= asset_path('logo.png') %>" class="w-12 h-12 rounded-2xl object-cover" alt="Logo">
        <% end %>
        <span class="flex items-center gap-1 text-gray-700 text-sm font-semibold">
          <i class="fa fa-location-dot text-blue-400"></i> Tipco Tower2
        </span>
        <span class="flex items-center gap-1 text-gray-700 text-sm font-semibold">
          <i class="fa fa-phone text-pink-400"></i> 09xxxxxxxx
        </span>
      </div>
      <!-- Social Links -->
      <div class="flex items-center gap-3 text-lg text-gray-500">
        <%= link_to "#", class: "hover:text-blue-600 transition" do %><i class="fab fa-facebook-f"></i><% end %>
        <%= link_to "#", class: "hover:text-sky-500 transition" do %><i class="fab fa-twitter"></i><% end %>
        <%= link_to "#", class: "hover:text-blue-500 transition" do %><i class="fab fa-linkedin-in"></i><% end %>
      </div>
    </div>

    <!-- Navigation + Search -->
    <div class="flex items-center justify-between flex-wrap gap-6 mt-3">
      <!-- Main Navigation -->
      <nav class="flex items-center gap-6 flex-wrap">
        <%= link_to "Home", root_path, class: "px-4 py-2 rounded-full hover:bg-blue-100 hover:text-blue-700 transition font-medium" %>
        <%= link_to "Articles", articles_path, class: "px-4 py-2 rounded-full hover:bg-blue-100 hover:text-blue-700 transition font-medium" %>
        <% if current_user %>
          <%= link_to "Admin Articles", admin_articles_path, class: "px-4 py-2 rounded-full hover:bg-blue-100 hover:text-blue-700 transition font-medium" %>
        <% end %>
        <%= link_to "Contact Us", "#", class: "px-4 py-2 rounded-full hover:bg-blue-100 hover:text-blue-700 transition font-medium" %>
      </nav>

      <!-- Search + User Section -->
      <div class="flex items-center gap-4 flex-wrap">
        <form class="relative">
          <span class="absolute left-3 top-2 text-gray-400"><i class="fa fa-search"></i></span>
          <input
            type="text"
            placeholder="Search"
            class="w-40 md:w-56 pl-9 pr-4 py-2 rounded-2xl bg-white/40 backdrop-blur-sm border border-gray-200 text-gray-700 text-sm focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition"
          >
        </form>

        <% if current_user %>
          <span class="flex items-center gap-2 text-gray-700 text-sm font-medium">
            <i class="fa fa-user"></i> Admin
          </span>
          <%= button_to "Sign out", session_path, method: :delete,
            class: "bg-gradient-to-r from-blue-400 to-purple-500 hover:from-blue-500 hover:to-purple-500 text-white font-semibold px-4 py-1.5 rounded-full transition" %>
        <% else %>
          <span class="flex items-center gap-2 text-gray-500 text-sm font-medium">
            <i class="fa fa-user"></i> Guest
          </span>
          <%= link_to "Sign in", new_session_path,
            class: "bg-gradient-to-r from-blue-400 to-purple-500 hover:from-blue-500 hover:to-purple-500 text-white font-semibold px-4 py-1.5 rounded-full transition" %>
        <% end %>
      </div>
    </div>
  </div>
</header>
